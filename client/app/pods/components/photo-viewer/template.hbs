{{yield}}
{{#modal-dialog}}
<div class="full-size-photo-viewer">
	<div class="modal-body">
		<div class="photo">
			<img class="img-responsive center" {{bind-attr src='currentPhoto.filePath'}}>
		</div>
		<div  class="side-panel">
			<div class="well">
		  		<div class="btn btn-info bump" {{action 'forward' currentPhoto}}>NEXT</div>
				<div class="btn btn-info bump" {{action 'backwards' currentPhoto}}>PREV</div>
				<div class="btn btn-info bump" {{action 'closeViewer'}}>CLOSE</div>
			</div>
		</div>
	</div>
</div>
{{/modal-dialog}}